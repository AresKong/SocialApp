<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/roomImage"
        style="@style/My.ImageView.Photo_Avatar"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:src="@drawable/room" />

    <TextView
        android:id="@+id/hostName"
        style="@style/My.TextView._Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.0dip"
        android:layout_toEndOf="@id/roomImage"
        android:gravity="center"
        android:singleLine="true"
        android:text="Host"
        android:textColor="@drawable/recent_name_text_color_selector" />
    <TextView
        android:id="@+id/roomNote"
        android:layout_width="fill_parent"
        style="@style/My.TextView._Black"
        android:layout_height="35.0dip"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:singleLine="true"
        android:text="Note"
        android:textColor="@drawable/recent_message_text_color_selector"
        android:textSize="15.0sp"
        android:layout_below="@+id/hostName"
        android:layout_alignStart="@+id/hostName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/My.TextView._Black"
        android:gravity="center"
        android:text="Topic"
        android:id="@+id/roomTopic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>